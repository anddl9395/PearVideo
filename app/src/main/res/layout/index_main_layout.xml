<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/index_main_vp"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <android.support.v4.view.PagerTabStrip
                    android:id="@+id/index_main_pts"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </android.support.v4.view.PagerTabStrip>
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/index_main_lin1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/index_main_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="推荐"
                    android:background="@drawable/index_button_shape"
                    android:textColor="@color/colorYellow"
                    />
                <TextView
                    android:id="@+id/index_main_NameAndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="前院儿 | 03'18''"
                    android:textColor="#ccc"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/index_main_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/index_main_lin1"
                android:layout_alignLeft="@+id/index_main_lin1"
                android:layout_marginTop="10dp"
                android:text="标题！标题！"
                android:textSize="24dp"
                android:textColor="#000"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/index_main_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/index_main_vp">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
