<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.qf.pearvideo.activity.InterestActivity">

    <fragment
        android:id="@+id/action_interset"
        android:name="com.qf.pearvideo.fragment.FragmentAction"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
    <LinearLayout
        android:id="@+id/mFrush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_interset"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#fff"
        android:gravity="center"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_frush"
            android:textColor="#ccc"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mFrush"
        >
        <ListView
            android:id="@+id/mListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2dp"
            android:divider="#ccc"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/mMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mSwipeRefreshLayout"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#fff"
        android:gravity="center"
        android:visibility="gone"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Small"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_more"
            android:textColor="#ccc"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
</RelativeLayout>
