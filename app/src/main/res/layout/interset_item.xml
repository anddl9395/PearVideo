<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:orientation="vertical"
    android:background="#fff"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <SurfaceView
            android:id="@+id/mSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/interset_item_stop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_stop"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:id="@+id/mLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#fff"
            android:visibility="gone"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Small"
                />
            <TextView
                android:id="@+id/mLoadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="正在缓冲..."
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/mProgress"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#ccc"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/progress_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_progress_stop"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/interset_item_nowtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="00:00/00:00"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/interset_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我就是我"
        android:textColor="#000"
        android:textSize="18dp"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/interset_item_portarit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/interset_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ccc"
            android:layout_marginLeft="10dp"
            android:text="一手video"
            />
        <TextView
            android:id="@+id/interset_item_totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ccc"
            android:text="02'07"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc"/>
</LinearLayout>
