<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <VideoView
            android:id="@+id/index_main_item_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/index_main_item_lin1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/index_main_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:gravity="center"
                android:text="推荐"
                android:background="@drawable/index_button_shape"
                android:textColor="@color/colorYellow"
                />
            <TextView
                android:id="@+id/index_main_item_NameAndTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="前院儿 | 03'18''"
                android:textColor="#ccc"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/index_main_item_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/index_main_item_lin1"
            android:layout_alignLeft="@+id/index_main_item_lin1"
            android:layout_marginTop="10dp"
            android:text="标题！标题！"
            android:textSize="24dp"
            android:textColor="#ccc"/>
    </RelativeLayout>
</RelativeLayout>
